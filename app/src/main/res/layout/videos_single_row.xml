<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoSingleRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumbnailView"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:layout_marginBottom="@dimen/padding_start_end"
        android:layout_marginLeft="@dimen/padding_start_end"
        android:layout_marginStart="@dimen/padding_start_end"
        android:layout_marginTop="@dimen/padding_start_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_top_games_star_white" />

    <TextView
        android:id="@+id/videoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_start_end"
        android:layout_marginStart="@dimen/padding_start_end"
        android:layout_marginLeft="@dimen/padding_start_end"
        android:layout_marginTop="8dp"
        android:padding="@dimen/padding_start_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnailView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/string_videos" />

</androidx.constraintlayout.widget.ConstraintLayout>
